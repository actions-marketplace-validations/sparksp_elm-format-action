{
  "name": "elm-format-action",
  "version": "1.0.0",
  "description": "Validate Elm code is formatted correctly",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "pack": "ncc build",
    "test": "jest",
    "all": "run-s build format lint pack test"
  },
  "homepage": "https://github.com/sparksp/elm-format-action#readme",
  "bugs": {
    "url": "https://github.com/sparksp/elm-format-action/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sparksp/elm-format-action.git"
  },
  "keywords": [
    "actions",
    "elm-format"
  ],
  "author": "Phill Sparks <me@phills.me.uk> (https://github.com/sparksp)",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.2.6",
    "@actions/exec": "^1.0.4",
    "@actions/glob": "^0.1.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.10",
    "@types/node": "^14.6.0",
    "@typescript-eslint/parser": "^3.9.0",
    "@zeit/ncc": "^0.22.3",
    "elm-format": "^0.8.3",
    "eslint": "^7.7.0",
    "eslint-plugin-github": "^4.1.1",
    "eslint-plugin-jest": "^23.20.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^26.4.0",
    "jest-circus": "^26.4.0",
    "js-yaml": "^3.14.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "ts-jest": "^26.2.0",
    "typescript": "^3.9.7"
  }
}
